<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Dalamud.NET.Sdk/13.0.0">

  <PropertyGroup>
    <Authors>ahaberman25</Authors>
    <Company>ahaberman25</Company>
    <Version>1.0.0</Version>
    <Description>Calculate materials needed for Grand Company Supply Missions</Description>
    <PackageProjectUrl>https://github.com/ahaberman25/Supply-Mission-Helper</PackageProjectUrl>

    <!-- v13 is .NET 9 -->
    <TargetFramework>net9.0-windows</TargetFramework>
    <Platforms>x64</Platforms>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <!-- Ensure no legacy local DLLs get pulled in from a 'dalamud' folder -->
  <ItemGroup>
    <Reference Remove="Dalamud" />
    <Reference Remove="Dalamud.Bindings.ImGui" />
    <Reference Remove="Lumina" />
    <Reference Remove="Lumina.Excel" />
    <Reference Remove="FFXIVClientStructs" />
    <Reference Remove="Serilog.Sinks.File" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="dalamud\**\*" />
    <Content Remove="dalamud\**\*" />
    <EmbeddedResource Remove="dalamud\**\*" />
  </ItemGroup>

  <!-- Do NOT include DalamudPackager or any manual DLL references; the SDK handles it. -->

</Project>
