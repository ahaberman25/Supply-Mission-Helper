<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Dalamud.NET.Sdk/13.0.0">
  <PropertyGroup>
    <Authors>ahaberman25</Authors>
    <Company>ahaberman25</Company>
    <Version>1.0.0</Version>
    <Description>Calculate materials needed for Grand Company Supply Missions</Description>
    <PackageProjectUrl>https://github.com/ahaberman25/Supply-Mission-Helper</PackageProjectUrl>

    <TargetFramework>net9.0-windows</TargetFramework>
    <Platforms>x64</Platforms>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <!-- Keep the project clean: don't let accidental local DLLs sneak in -->
  <ItemGroup>
    <Reference Remove="*" />
    <None Remove="dalamud\**\*" />
    <Content Remove="dalamud\**\*" />
    <EmbeddedResource Remove="dalamud\**\*" />
  </ItemGroup>
</Project>
