<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>ahaberman25</Authors>
    <Company>ahaberman25</Company>
    <Version>1.0.0</Version>
    <Description>Calculate materials needed for Grand Company Supply Missions</Description>
    <PackageProjectUrl>https://github.com/ahaberman25/Supply-Mission-Helper</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Dalamud.Sdk targets .NET 8; keep this on net8.0-windows -->
    <TargetFramework>net8.0-windows</TargetFramework>
    <Platforms>x64</Platforms>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <!-- Pulls in Dalamud, ImGui.NET, Lumina, etc. for compile-time -->
    <PackageReference Include="Dalamud.Sdk" Version="11.0.0" />
    <!-- Keep your packager -->
    <PackageReference Include="DalamudPackager" Version="2.1.13" />
  </ItemGroup>

</Project>
