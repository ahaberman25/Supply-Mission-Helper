<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <!-- Add the Dalamud SDK (pulled from nuget.org) -->
  <Sdk Name="Dalamud.NET.Sdk" Version="13.1.0" />

  <PropertyGroup>
    <Authors>ahaberman25</Authors>
    <Company>ahaberman25</Company>
    <Version>1.0.0</Version>
    <Description>Calculate materials needed for Grand Company Supply Missions</Description>
    <PackageProjectUrl>https://github.com/ahaberman25/Supply-Mission-Helper</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Dalamud SDK targets .NET 8 -->
    <TargetFramework>net8.0-windows</TargetFramework>
    <Platforms>x64</Platforms>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <!-- Keep the packager for Release packing -->
    <PackageReference Include="DalamudPackager" Version="2.1.13" />
  </ItemGroup>

</Project>
